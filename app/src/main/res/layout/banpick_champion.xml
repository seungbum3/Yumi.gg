<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".BanPickChampion">

    <Button
        android:id="@+id/PageBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pageback_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/BanpickTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루팀 1번 챔피언 선택해주세요"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/BanPickTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20초"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/BanpickTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/BlueTeam"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="블루팀"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="#0048FF"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/BanpickTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/RedTeam"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="레드팀"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="#FF1E00"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="90dp"
        app:layout_constraintTop_toBottomOf="@+id/BanpickTitle"
        app:layout_constraintStart_toEndOf="@+id/BlueTeam"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/blue1_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/blue1"
        app:layout_constraintBottom_toBottomOf="@+id/blue1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ✅ 블루팀 1~5 ImageView -->
    <ImageView
        android:id="@+id/blue1"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/BlueTeam"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/blue2_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/blue2"
        app:layout_constraintBottom_toBottomOf="@+id/blue2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blue2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/blue1"
        app:layout_constraintStart_toStartOf="@id/blue1"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/blue3_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/blue3"
        app:layout_constraintBottom_toBottomOf="@+id/blue3"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blue3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/blue2"
        app:layout_constraintStart_toStartOf="@id/blue2"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/blue4_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/blue4"
        app:layout_constraintBottom_toBottomOf="@+id/blue4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blue4"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/blue3"
        app:layout_constraintStart_toStartOf="@id/blue3"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/blue5_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/blue5"
        app:layout_constraintBottom_toBottomOf="@+id/blue5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/blue5"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/blue4"
        app:layout_constraintStart_toStartOf="@id/blue4"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/red1_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/red1"
        app:layout_constraintBottom_toBottomOf="@+id/red1"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✅ 레드팀 1~5 ImageView -->
    <ImageView
        android:id="@+id/red1"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/blue1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/red2_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/red2"
        app:layout_constraintBottom_toBottomOf="@+id/red2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/red2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/red1"
        app:layout_constraintEnd_toEndOf="@id/red1"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/red3_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/red3"
        app:layout_constraintBottom_toBottomOf="@+id/red3"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/red3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/red2"
        app:layout_constraintEnd_toEndOf="@id/red2"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/red4_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/red4"
        app:layout_constraintBottom_toBottomOf="@+id/red4"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/red4"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/red3"
        app:layout_constraintEnd_toEndOf="@id/red3"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/red5_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/red5"
        app:layout_constraintBottom_toBottomOf="@+id/red5"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/red5"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#434343"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/red4"
        app:layout_constraintEnd_toEndOf="@id/red4"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/BlueBanChampion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금지 챔피언"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/blue5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/RedBanChampion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금지 챔피언"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toBottomOf="@id/red5"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 블루팀 금지 챔피언 -->
    <LinearLayout
        android:id="@+id/BlueBanContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/BlueBanChampion"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 첫 줄: 1~3번 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blue_ban_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/blue_ban_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/blue_ban_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />
        </LinearLayout>

        <!-- 둘째 줄: 4~5번 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blue_ban_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/blue_ban_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />
        </LinearLayout>
    </LinearLayout>


    <!-- 레드팀 금지 챔피언 -->
    <LinearLayout
        android:id="@+id/RedBanContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/RedBanChampion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp">

        <!-- 첫 줄: 1~3번 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red_ban_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/red_ban_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/red_ban_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />
        </LinearLayout>

        <!-- 둘째 줄: 4~5번 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red_ban_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />

            <ImageView
                android:id="@+id/red_ban_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:src="@drawable/champion_ban" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/ChampionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챔피언 고르기 버튼"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/Champion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/Champion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챔피언"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:backgroundTint="#6C6C6C"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초기화"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:backgroundTint="#E4E4E4"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/WhoWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승부예측"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:backgroundTint="#E4E4E4"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>